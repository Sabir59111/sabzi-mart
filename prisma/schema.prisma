generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String  @id @default(uuid())
  name        String
  image       String
  price       Float
  oldPrice    Float?
  category    String
  isSoldOut   Boolean @default(false)
  createdAt   DateTime @default(now())
}


model Offers{
  id          String  @id @default(uuid())
  name        String
  image       String
  price       Float
  oldPrice    Float?
  createdAt   DateTime @default(now())
  category    String
  discription String
  isSoldOut   Boolean @default(false)

}


model Order{
  id          String  @id @default(uuid())
  userId      String 
  email       String
  name        String
  image       String
  price       Float
  regularQty  Float?
  customQty   Float?
  InRupess    Float?
  createdAt   DateTime @default(now())
  category    String
}